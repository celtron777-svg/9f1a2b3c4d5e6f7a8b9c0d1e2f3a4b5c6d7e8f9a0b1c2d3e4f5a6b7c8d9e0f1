{
  "root_dir": "/home/celtron/vgu",
  "mcf": {
    "version": "3.0.0",
    "defaultMode": "Discussion",
    "autoInitiate": "Neutral",
    "replyLimit": 5,
    "morality": {
      "laws": ["Truth", "Logic", "Harm Prevention"],
      "checker": {
        "enabled": true,
        "depth": 3,
        "criteria": ["who", "what", "where", "when", "why", "how"],
        "recursive": true
      }
    },
    "dependencies": [
      "adaptive", "creative", "dialogue", "inputHandler", "memoryHandler",
      "workflow", "decisionHandler", "feedbackLoop", "dataVault", "workflowSync",
      "personality", "textSpeechSync", "moralityChecker", "backupManager"
    ]
  },
  "modules": {
    "core": {
      "adaptive": {
        "version": "3.0.0",
        "learningRate": 0.1,
        "feedbackIntegration": true,
        "contextWindow": "dynamic",
        "dependencies": ["memoryHandler", "feedbackLoop"]
      },
      "creative": {
        "version": "3.0.0",
        "generationModes": ["brainstorm", "story", "solution"],
        "maxOutputLength": 1000,
        "dependencies": ["dialogue", "memoryHandler"]
      },
      "dialogue": {
        "version": "3.0.0",
        "toneOptions": ["formal", "casual", "banter"],
        "contextWindow": "dynamic",
        "maxResponseLength": 500,
        "dependencies": ["inputHandler", "memoryHandler", "decisionHandler"]
      }
    },
    "sub": {
      "inputHandler": {
        "version": "3.0.0",
        "supportedFormats": ["text", "command"],
        "maxInputLength": 1000,
        "errorHandling": {"flagInvalid": true, "retryLimit": 3},
        "contextIntegration": {"memoryHandler": true, "sessionTimeout": "30m"},
        "dependencies": ["memoryHandler", "dialogue"]
      },
      "workflow": {
        "version": "3.0.0",
        "taskQueue": {"maxTasks": 100, "priorityLevels": ["high", "medium", "low"]},
        "errorRecovery": {"enabled": true, "retryLimit": 3, "fallback": "defaultResponse"},
        "dependencies": ["workflowModule", "feedbackLoop", "decisionHandler"]
      },
      "personality": {
        "version": "3.0.0",
        "profiles_path": "/home/celtron/vgu/personalities",
        "defaultProfile": "Neutral",
        "toneSettings": {
          "Neutral": {"tone": "neutral", "formality": "neutral", "humor": "none"}
        },
        "dependencies": ["memoryHandler", "dialogue"]
      },
      "textSpeechSync": {
        "version": "3.0.0",
        "speechToText": {"library": "Whisper", "model": "base", "language": "en", "offline": true},
        "textToSpeech": {"library": "Coqui", "voice": "female", "rate": 1.0, "pitch": 1.0},
        "syncInterval": "100ms",
        "dependencies": ["inputHandler", "dialogue", "memoryHandler"]
      },
      "moralityChecker": {
        "version": "3.0.0",
        "laws": ["Truth", "Logic", "Harm Prevention"],
        "analysis": {"depth": 3, "criteria": ["who", "what", "where", "when", "why", "how"], "recursive": true},
        "errorHandling": {"flagUnethical": true, "maxRetries": 3},
        "dependencies": ["decisionHandler", "memoryHandler", "dialogue"]
      },
      "backupManager": {
        "version": "3.0.0",
        "backup": {"schedule": "daily", "path": "/home/celtron/vgu/backups", "maxBackups": 10},
        "restore": {"enabled": true, "validation": true},
        "dependencies": ["memoryHandler", "dataVault"]
      },
      "memoryHandler": {
        "version": "3.0.0",
        "storage": {"maxEntries": 1000},
        "context": {"maxContextLength": 10},
        "session": {"autoSave": true},
        "dependencies": []
      }
    }
  },
  "modes": {
    "Discussion": "Neutral",
    "Banter": "Harley",
    "Developer": "Neutral",
    "Troubleshooting": "Neutral",
    "Creative": "Neutral"
  },
  "memory": [],
  "weights_dir": "/home/celtron/vgu/weights",
  "personalities_dir": "/home/celtron/vgu/personalities"
}